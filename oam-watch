#!/bin/bash

source /etc/gentoo-oam.conf || oam_die "/etc/gentoo-oam.conf missing - exiting"
source /usr/share/gentoo-oam/gentoo-oam-functions.sh

cd $OAM_LOGDIR || oam_die "/var/log/oam is missing - exiting"

LOGDATE=$(ls -1dt 2* | head -1)

if [[ -z "$LOGDATE" ]] ; then
    LOGDATE=$(date +%Y%m%d)
    mkdir -p $LOGDATE
fi

TOPLOGFILES="error glsa oam 
	$LOGDATE/sync $LOGDATE/update $LOGDATE/blocks"

for f in $TOPLOGFILES ; do
    [[ ! -f ${f}.log ]] && touch ${f}.log
done

oam-genlop-current | \
multitail -x "$HOSTNAME/oam/$LOGDATE gentoo-oam Version $(oam_version)" \
	  -T --basename \
	  -sw 45,40 -sn 2,3 \
	  \
	  -wh 12 oam.log \
	  -j \
	  \
	  -i $LOGDATE/sync.log \
	  -I $LOGDATE/update.log \
	  -I $LOGDATE/blocks.log \
	  -wh 4 error.log \
	  -wh 4 -ci red glsa.log

exit 0
