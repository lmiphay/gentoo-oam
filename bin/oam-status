#!/bin/bash

source /etc/gentoo-oam.conf
source /usr/share/gentoo-oam/gentoo-oam-functions.sh

cd $OAM_LOGDIR || oam_die "$OAM_LOGDIR is missing - exiting"

oamstat()
{
    local watch_dir=$(oam_lastdate)
    local oamlog=$watch_dir/oam.log

    oamdate=$(basename $watch_dir)
    start_time=$(head -1 $oamlog | awk '{print $1}')
    end_time=$(tail -1 $oamlog | awk '{print $1}')
    last_cmd=$(tail -1 $oamlog | awk '{for(i=2;i<=NF;++i) printf("%s ",  $i) }')
    last_cmd=${last_cmd% }

    local mergelog=$watch_dir/merge.log

    if [[ -f "$mergelog" ]] ; then
        merges_made=$(egrep ' merged\.$' $mergelog | wc -l)
        initial_merges=$(grep 'Size of downloads:' $mergelog | head -1 | awk '{print $2}')
    fi

    [ -z "$merges_made" ]    && merges_made="0"
    [ -z "$initial_merges" ] && initial_merges="0"

    merge_counts="${merges_made}/${initial_merges}"
}

packagename()
{
    echo $1 | cut -d\  -f$2 | sed -e 's:[\(\)]::g' -e 's/::.*//'
}

mergestat()
{
    local message=$(tail -1 /var/log/emerge.log)
    mergestatparse "$message"
}

mergestatparse()
{
    local message="$1"
    local seconds=$(echo $message | awk '{print $1}'|sed -e 's/://')
    local ts=$(date +$OAM_TS -d @$seconds)
    
    ts=${ts#${oamdate}:}

    case "$message" in
        *Started*)
            echo "$ts Starting"
            ;;
        *terminating*|*exiting*|*Finished*)
            echo "$ts IDLE"
            ;;
        *AUTOCLEAN*)
            echo "$ts Autoclean $(packagename "$message" 4)"
            ;;
        *completed\ emerge*)
            echo "$ts Merged $(packagename "$message" 8)"
            ;;
        *unmerge\ success*)
            echo "$ts Unmerged $(packagename "$message" 5)"
            ;;
        *\*\ emerge*)
            echo "$ts Merge $(echo "$message" | cut -d\  -f5-)"
            ;;
        *emerge*|*unmerge*)
            echo "$ts Merging $(packagename "$message" 7)"
            ;;
        *Post-Build\ Cleaning*)
            echo "$ts Cleaning $(packagename "$message" 8)"
            ;;
        *Updating\ world*)
            echo "$ts UpdateWorld $(packagename "$message" 9)"
            ;;
        *Cleaning*|*Compiling*|*Merging*)
            echo "$ts Merging $(packagename "$message" 7)"
            ;;
        *Unmerging*)
            echo "$ts Unmerging $(packagename "$message" 4)"
            ;;
        *)
            echo "$ts UNKNOWN: $message"
            ;;
    esac
}

print_raw_status()
{
    echo "$HOSTNAME $start_time $end_time $merges_made $initial_merges '$last_cmd' '$(mergestat)'"
}

print_header()
{
    printf "%-8s %8s %8s %9s %-36s %-s\n" Host Date \
       OAM_Beg \
       Merges \
       OAM_Last_Log_Message \
       emerge
}

print_status()
{
    oamstat
    printf "%-8s %-8s %8s %9s %8s '%-25s' %s\n" $HOSTNAME $oamdate \
       ${start_time#$oamdate:} \
       $merge_counts \
       ${end_time#$oamdate:} "${last_cmd:0:25}" \
       "$(mergestat)"
}

case "$1" in
    watch)
        print_header
        ;&
    loop)
        while /bin/true; do
            print_status
            sleep 15
        done
        ;;
    header)
        print_header
        ;;
    raw)
        print_raw_status
        ;;
    net|netwatch)
        print_header
        shift
        mussh \
            -o ConnectTimeout=5 \
            -c "oam-status loop" \
            -m \
            -h $@ | sed -e 's/^.*: //'
        ;;
    parsetest)
	while read line ; do
	    mergestatparse "$line"
	done
        ;;
    *)
        print_header
        print_status
    ;;
esac

exit 0
