#!/bin/bash

source /etc/gentoo-oam.conf
source /usr/share/gentoo-oam/gentoo-oam-functions.sh

cd $OAM_LOGDIR || oam_die "$OAM_LOGDIR is missing - exiting"

dir=$(oam_lastdate)

# we currently need to pick up some of the edit script in /usr/sbin
export PATH=/usr/sbin:$PATH

oam-genlop tail | \
    multitail \
	  -x "$HOSTNAME/oam/$dir gentoo-oam Version $(oam_version)" \
	  --config /usr/share/gentoo-oam/gentoo-oam-multitail.conf \
	  --basename \
	  -sw 45,40 -sn 3,4 \
	  \
	  -wh 6 /usr/share/gentoo-oam/oam-watch.help \
	  -wh 13 oam.log \
	  -j \
	  \
	  -wh 6 -l oam-emergelog \
	  --retry-all \
	  -wh 13 error.log \
	  --mark-change -T \
	  -i $dir/sync.log \
	  -I $dir/merge.log \
	  --label "blocks " -I $dir/blocks.log \
	  -t "sync/merge/blocks/kernel " \
	  -I $dir/kernel.log \
	  -I $dir/summary.log \
	  $OAM_MULTITAIL_EXTRA_OPT

exit 0
